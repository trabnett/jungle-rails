<section class="categories-show">

  <header class="page-header">
    <h1>
      <%= @category.name %>
    </h1>
  </header>
  <% @products.each do |p| %>
    <tr style="border-bottom: 1px solid black;">
    <td>
      <%= image_tag p.image.tiny %>
    </td>
    <td>
      <h4><%= p.name %></h4>
      <br>
      <p><%= p.description %></p>
    </td>
  </tr>
  <%end%>



</section>
