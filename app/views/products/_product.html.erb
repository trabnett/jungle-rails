<article class="product">
  <header>
    <%= link_to product do %>
      <% if product.quantity == 0 %>
      <aside class="warning"><%= "SOLD OUT!" %></aside>
      <% end %>
      <%= image_tag product.image.thumb, alt: product.name %>
      <h4><%= product.name %></h4>
    <% end %>
  </header>
  <% if product.ratings.average(:rating) %>
    <p><em>Product Rating: <strong><%=((product.ratings.average(:rating).to_f * 100).to_i).to_f / 100 %>/5</strong></em><p>
  <% end %>
  <p class="description">
    <%= product.description %>
  </p>
  <footer class="actions">
    <%= button_to add_item_cart_path(product_id: product.id), class: 'btn btn-primary' , method: :post do %>
      <%= fa_icon "shopping-cart", text: 'Add' %>
    <% end %>
    <%= link_to product, class: 'btn btn-default pull-right' do %>
      Details &raquo;
    <% end %>
  </footer>

  <aside class="price">
    <%= humanized_money_with_symbol product.price %>
  </aside>
</article>
