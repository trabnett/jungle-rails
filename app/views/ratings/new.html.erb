<section class="admin-categories-new">

  <header class="page-header">
    <h1><%=@product.name%> &raquo; New Review</h1>
  </header>


  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_for @rating, url: {action: "create"} do |form| %>

        <% if form.object.errors.any? %>
          <div class="alert alert-danger">
            <strong>The following errors prevented saving:</strong>
            <ul>
              <% form.object.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        <% end %>


        <div class="form-group">
        <%= form.label :product_id %>
        <%= form.number_field :product_id, :readonly => true, :value => @product.id, class: 'form-control'%>
      </div>

      <div class="form-group">
        <%= form.label :user_id %>
        <%= form.number_field :user_id, :readonly => true, :value => current_user.id, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_field :description, class: 'form-control' %>
      </div>

      <div class="form-group">
      <%= form.label :rating %>
      <%= form.number_field :rating, max: 5, class: 'form-control' %>
    </div>

        <%= form.submit 'Create Rating', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

</section>